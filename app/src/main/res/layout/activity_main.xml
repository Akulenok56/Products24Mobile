<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/basket"
            android:background="@android:color/transparent"
            >
        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Корзина"
            android:textSize="10dp"
            android:textColor="#27214D"
            android:fontFamily="@font/nun_reg"
            android:layout_marginTop="3dp"
            >
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/textWithName"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nun_med"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="123dp"
        tools:ignore="MissingConstraints">
    </TextView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_4"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="88dp"
        tools:ignore="MissingConstraints">
    </ImageButton>

    <EditText
        android:id="@+id/searchEd"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWithName"
        android:layout_marginTop="24dp"
        android:textSize="14sp"
        android:fontFamily="@font/nun_reg"
        android:paddingStart="56dp"
        android:hint="Поиск товаров"
        android:layout_marginStart="21dp"
        tools:ignore="HardcodedText,MissingConstraints,RtlSymmetry">
    </EditText>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lupa"
        app:layout_constraintStart_toStartOf="@+id/searchEd"
        app:layout_constraintTop_toTopOf="@id/searchEd"
        app:layout_constraintBottom_toBottomOf="@id/searchEd"
        android:layout_marginStart="24dp"
        tools:ignore="MissingConstraints">
    </ImageView>

    <ImageButton
        android:layout_width="27dp"
        android:layout_height="18dp"
        android:src="@drawable/filters"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/searchEd"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="24dp"
        tools:ignore="MissingConstraints">
    </ImageButton>

    <TextView
        android:id="@+id/recCombo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рекомендованные товары"
        android:textSize="24sp"
        android:textColor="#27214D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchEd"
        android:fontFamily="@font/nun_med"
        android:layout_marginStart="25sp"
        android:layout_marginTop="40sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints">
    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leftCont"
        android:layout_width="152dp"
        android:layout_height="183dp"
        android:background="@drawable/rad16"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recCombo"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:layout_width="16dp"
            android:src="@drawable/heart"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_height="15dp">
        </ImageButton>

        <ImageButton
            android:layout_width="24dp"
            android:src="@drawable/plus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@android:color/transparent"
            android:layout_height="24dp">
        </ImageButton>

        <LinearLayout
            android:layout_width="57dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="17dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_height="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rubl"
                >
            </ImageView>
            <TextView
                android:id="@+id/ppriceHoneyLime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F08626"
                android:textSize="14sp"
                android:text=""
                android:fontFamily="@font/nun_reg">
            </TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/pimageHoneyLime"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="22dp"
            android:layout_height="wrap_content">
        </ImageView>
        <TextView
            android:id="@+id/pnameHoney"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="#27214D"
            android:fontFamily="@font/nun_med"
            app:layout_constraintTop_toBottomOf="@id/pimageHoneyLime"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rightCont"
        android:layout_width="152dp"
        android:layout_height="183dp"
        android:background="@drawable/rad16"
        android:layout_marginStart="23dp"
        android:layout_marginTop="24dp"
        android:elevation="8dp"
        app:layout_constraintStart_toEndOf="@id/leftCont"
        app:layout_constraintTop_toBottomOf="@id/recCombo"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:layout_width="16dp"
            android:src="@drawable/heart"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_height="15dp">
        </ImageButton>

        <ImageButton
            android:layout_width="24dp"
            android:src="@drawable/plus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@android:color/transparent"
            android:layout_height="24dp">
        </ImageButton>

        <LinearLayout
            android:layout_width="57dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="17dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_height="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rubl"
                >
            </ImageView>
            <TextView
                android:id="@+id/priceBerryMango"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F08626"
                android:textSize="14sp"
                android:text=""
                android:fontFamily="@font/nun_reg">
            </TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageBerryMango"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="22dp"
            android:layout_height="wrap_content">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="#27214D"
            android:fontFamily="@font/nun_med"
            app:layout_constraintTop_toBottomOf="@id/imageBerryMango"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>