<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="469dp"
        android:background="#FFA451"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,Orientation">
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/small_fruits"
        android:layout_marginEnd="43dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="131dp"
        tools:ignore="MissingConstraints">
    </ImageView>

    <ImageView
        android:id="@+id/basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fruit_basket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/container"
        android:layout_marginTop="135dp"
        tools:ignore="MissingConstraints">
    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:src="@drawable/ellipse_4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="@id/container"
        android:layout_marginStart="73dp"
        >
    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:src="@drawable/ellipse_4"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="65dp"
        app:layout_constraintBottom_toBottomOf="@id/container"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:src="@drawable/ellipse_4"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="95dp"
        app:layout_constraintBottom_toBottomOf="@id/container"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </ImageView>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipse_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basket"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        tools:ignore="MissingConstraints">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Авторизация"
        app:layout_constraintBottom_toTopOf="@id/main"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="@font/nun_med"
        tools:ignore="MissingConstraints">
    </TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/main"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">


        <EditText
            android:id="@+id/loginEd"
            android:layout_width="327dp"
            android:layout_height="56dp"
            android:background="@drawable/rectangle_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:textSize="20dp"
            android:paddingStart="25dp"
            android:hint="Логин"
            android:fontFamily="@font/nun_reg"
            android:textAlignment="textStart"
            app:layout_constraintTop_toTopOf="parent"
            >
        </EditText>

        <EditText
            android:id="@+id/passEd"
            android:layout_width="327dp"
            android:layout_height="56dp"
            android:background="@drawable/rectangle_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:textSize="20dp"
            android:paddingStart="25dp"
            android:hint="Пароль"
            android:fontFamily="@font/nun_reg"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@id/loginEd"
            >
        </EditText>

        <android.widget.Button
            android:id="@+id/btnStart"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/rad10"
            android:backgroundTint="#FFA451"
            android:text="Продолжить"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passEd">

        </android.widget.Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>