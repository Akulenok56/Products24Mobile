<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA451"
    tools:context=".BasketActivity">


    <android.widget.Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Назад"
        android:fontFamily="@font/nun_med"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rad100"
        tools:ignore="MissingConstraints">
    </android.widget.Button>

    <TextView
        android:id="@+id/Basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nun_med"
        android:textStyle="bold"
        android:text="Моя корзина"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack"
        tools:ignore="MissingConstraints">
    </TextView>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="70dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/Basket"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"

                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="25dp"
                    app:layout_constraintStart_toStartOf="parent"

                    android:src="@drawable/rad20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints">
                </ImageView>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nun_med"
                    android:text=""
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/imageView"
                    tools:ignore="MissingConstraints">
                </TextView>

                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nun_reg"
                    android:text=" шт."
                    android:layout_marginTop="27dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/name"
                    tools:ignore="MissingConstraints">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/price"
                    app:layout_constraintTop_toTopOf="@id/name"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="50dp"
                    android:fontFamily="@font/nun_med"
                    android:textStyle="bold"
                    android:text=""
                    tools:ignore="MissingConstraints">
                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rubl_black"
                    android:layout_marginStart="1dp"
                    app:layout_constraintBottom_toBottomOf="@id/price"
                    app:layout_constraintStart_toEndOf="@id/price"
                    app:layout_constraintTop_toTopOf="@id/price"
                    tools:ignore="MissingConstraints">
                </ImageView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="MissingConstraints">
                </ImageView>


                <ImageButton
                    android:id="@+id/btnPlus"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plus32"
                    app:layout_constraintTop_toBottomOf="@+id/price"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="57dp"
                    android:backgroundTint="@android:color/transparent"
                    tools:ignore="MissingConstraints">
                </ImageButton>

                <ImageButton
                    android:id="@+id/btnMinus"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/minus"
                    app:layout_constraintTop_toTopOf="@id/btnPlus"
                    app:layout_constraintStart_toEndOf="@id/btnPlus"
                    android:backgroundTint="@android:color/transparent"
                    tools:ignore="MissingConstraints">
                </ImageButton>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/scroll">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Итого:"
                android:textStyle="bold"
                android:fontFamily="@font/nun_med"
                android:textSize="15sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="@font/nun_med"
                android:textSize="15sp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <android.widget.Button
            android:id="@+id/btnPay"
            android:layout_width="200dp"
            android:text="К оплате"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/nun_med"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/rad10"
            android:backgroundTint="#FFA451"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>