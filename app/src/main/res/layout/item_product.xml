<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/downCont"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:background="@drawable/rad16"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:layout_width="16dp"
            android:src="@drawable/heart"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_height="15dp">
        </ImageButton>

        <ImageButton
            android:id="@+id/addProduct"
            android:layout_width="24dp"
            android:src="@drawable/plus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@android:color/transparent"
            android:layout_height="24dp">
        </ImageButton>

        <LinearLayout
            android:layout_width="57dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="17dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_height="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rubl"
                >
            </ImageView>
            <TextView
                android:id="@+id/ppriceHoneyLime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F08626"
                android:textSize="14sp"
                android:text=""
                android:fontFamily="@font/nun_reg">
            </TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/pimageHoneyLime"
            android:layout_width="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="22dp"
            android:layout_height="80dp">
        </ImageView>
        <TextView
            android:id="@+id/pnameHoney"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="#27214D"
            android:ellipsize="end"
            android:singleLine="true"
            android:fontFamily="@font/nun_med"
            app:layout_constraintTop_toBottomOf="@id/pimageHoneyLime"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>